[global/wm]
margin-top = 5
margin-bottom = 5
margin-left = 5
margin-right = 5


[bar/bar1]
;monitor = LVDS1
dock = false
width = 100%
height = 22
offset-x = 0
offset-y = 0

background = #ff222222
foreground = #dfdfdf
linecolor = #555

border-bottom = 0
border-bottom-color = #333

spacing = 0
lineheight = 3
padding-left = 0
padding-right = 0
module-margin-left = 2
module-margin-right = 0

locale = it_IT.UTF-8

font-0 = NotoSans-Regular:size=8
font-1 = FontAwesome:size=8

modules-left = i3
modules-center = spotify 
modules-right = arch volume memory cpu temperature wlan eth battery date powermenu 

tray-position = right
tray-padding = 4
;tray-transparent = true
tray-background = #222222
;wm-restack = bspwm

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true

;label-focused = %icon% %index%
label-focused-background = #ee333333
label-focused-underline= #cc333333
label-focused-padding = 1

;label-unfocused = %index%
label-unfocused-padding = 1

;label-urgent = %index%!
label-urgent-background = #bd2c40
label-urgent-padding = 1

;label-visible = %index%
label-visible-foreground = #55
label-visible-padding = 1

[module/backlight]
type = internal/xbacklight

format = <label> <bar>
format-underline = #9f93af
label =  

